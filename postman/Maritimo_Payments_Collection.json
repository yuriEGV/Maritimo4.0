{
  "info": {
    "_postman_id": "maritimo-payments-collection",
    "name": "Maritimo Payments API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "version": "1.0.0"
  },
  "item": [
    {
      "name": "Auth - Login",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"admin@example.com\",\n  \"password\": \"secret\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/auth/login",
          "host": ["{{baseUrl}}"],
          "path": ["api","auth","login"]
        }
      },
      "response": []
    },
    {
      "name": "Tenants - Create",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": { "mode": "raw", "raw": "{\n  \"name\": \"Tenant A\"\n}" },
        "url": { "raw": "{{baseUrl}}/api/tenants", "host": ["{{baseUrl}}"], "path": ["api","tenants"] }
      }
    },
    {
      "name": "Students - Create",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" },
          { "key": "Authorization", "value": "Bearer {{token}}" }
        ],
        "body": { "mode": "raw", "raw": "{\n  \"nombre\": \"Juan\",\n  \"apellido\": \"Perez\",\n  \"edad\": 10,\n  \"grado\": \"5\"\n}" },
        "url": { "raw": "{{baseUrl}}/api/estudiantes", "host": ["{{baseUrl}}"], "path": ["api","estudiantes"] }
      }
    },
    {
      "name": "Tariffs - Create",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" },
          { "key": "Authorization", "value": "Bearer {{token}}" }
        ],
        "body": { "mode": "raw", "raw": "{\n  \"name\": \"Mensualidad\",\n  \"description\": \"Pago mensual escolar\",\n  \"amount\": 100,\n  \"currency\": \"USD\"\n}" },
        "url": { "raw": "{{baseUrl}}/api/tariffs", "host": ["{{baseUrl}}"], "path": ["api","tariffs"] }
      }
    },
    {
      "name": "Payments - Create (MercadoPago)",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" },
          { "key": "Authorization", "value": "Bearer {{token}}" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"estudianteId\": \"{{estudianteId}}\",\n  \"tariffId\": \"{{tariffId}}\",\n  \"provider\": \"mercadolibre\",\n  \"metadata\": { \"title\": \"Mensualidad\" }\n}"
        },
        "url": { "raw": "{{baseUrl}}/api/payments", "host": ["{{baseUrl}}"], "path": ["api","payments"] }
      }
    },
    {
      "name": "Payments - Create (Flow)",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" },
          { "key": "Authorization", "value": "Bearer {{token}}" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"estudianteId\": \"{{estudianteId}}\",\n  \"tariffId\": \"{{tariffId}}\",\n  \"provider\": \"flow\",\n  \"metadata\": { \"title\": \"Mensualidad\" }\n}"
        },
        "url": { "raw": "{{baseUrl}}/api/payments", "host": ["{{baseUrl}}"], "path": ["api","payments"] }
      }
    },
    {
      "name": "Payments - List",
      "request": {
        "method": "GET",
        "header": [ { "key": "Authorization", "value": "Bearer {{token}}" } ],
        "url": { "raw": "{{baseUrl}}/api/payments", "host": ["{{baseUrl}}"], "path": ["api","payments"] }
      }
    },
    {
      "name": "Payments - Get",
      "request": {
        "method": "GET",
        "header": [ { "key": "Authorization", "value": "Bearer {{token}}" } ],
        "url": { "raw": "{{baseUrl}}/api/payments/{{paymentId}}", "host": ["{{baseUrl}}"], "path": ["api","payments","{{paymentId}}"] }
      }
    },
    {
      "name": "Webhooks - MercadoLibre (test)",
      "request": {
        "method": "POST",
        "header": [ { "key": "Content-Type", "value": "application/json" } ],
        "body": { "mode": "raw", "raw": "{ \"collection\": { \"id\": \"ml_123\", \"status\": \"approved\", \"external_reference\": \"ext_456\" } }" },
        "url": { "raw": "{{baseUrl}}/api/payments/webhooks/mercadolibre", "host": ["{{baseUrl}}"], "path": ["api","payments","webhooks","mercadolibre"] }
      }
    },
    {
      "name": "Webhooks - Flow (test)",
      "request": {
        "method": "POST",
        "header": [ { "key": "Content-Type", "value": "application/json" }, { "key": "x-flow-signature", "value": "{{flowSignature}}" } ],
        "body": { "mode": "raw", "raw": "{ \"id\": \"flow_123\", \"status\": \"paid\", \"reference\": \"ext_456\" }" },
        "url": { "raw": "{{baseUrl}}/api/payments/webhooks/flow", "host": ["{{baseUrl}}"], "path": ["api","payments","webhooks","flow"] }
      }
    }
  ],
  "event": [],
  "variable": [
    { "key": "baseUrl", "value": "http://localhost:5000" },
    { "key": "token", "value": "" },
    { "key": "estudianteId", "value": "" },
    { "key": "tariffId", "value": "" },
    { "key": "paymentId", "value": "" },
    { "key": "flowSignature", "value": "" }
  ]
}
